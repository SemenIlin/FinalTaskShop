@model FinalTaskShop.ViewModels.ForEmployee.SickLeaveViewModel

@{
	ViewBag.Title = "CreateSickLeave";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<h4>Больничный</h4>
	<hr />
	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.StartOfTheSickLeave , "Начало болезни", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.StartOfTheSickLeave, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.StartOfTheSickLeave, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.FinishOfTheSickLeave, "Окончании болезни", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.FinishOfTheSickLeave, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.FinishOfTheSickLeave, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.MonetaryCompensation, "Денежная компенсация", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.MonetaryCompensation, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.MonetaryCompensation, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.EmployeeId, "Сотрудник", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.EmployeeId, ViewBag.Employees as IEnumerable<SelectListItem>)
				@Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Добавить" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("К списку", "ListSickLeaves")
</div>

