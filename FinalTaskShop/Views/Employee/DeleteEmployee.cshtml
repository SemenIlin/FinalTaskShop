@model FinalTaskShop.ViewModels.ForEmployee.EmployeeViewModel

@{
	ViewBag.Title = "DeleteEmployee";
}

<h3>Вы точно хотите удалить запись?</h3>
<div>
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayName("Имя")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Name)
		</dd>

		<dt>
			@Html.DisplayName("Фамилия")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.SurName)
		</dd>

		<dt>
			@Html.DisplayName("Отчество")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Patronymic)
		</dd>

		<dt>
			@Html.DisplayName("Дата рождения")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Birthday)
		</dd>
		<dt>
			@Html.DisplayName("Должность")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.PositionId)
		</dd>
	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="Удалить" class="btn btn-default" /> |
			@Html.ActionLink("Назад", "ListEmployees")
		</div>
	}
</div>