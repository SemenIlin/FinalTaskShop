@model FinalTaskShop.ViewModels.ForGood.RepairViewModel

@{
	ViewBag.Title = "CreateRepair";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<h4>Поломка</h4>
	<hr />
	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.Title, "Название", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.CostOfRepair , "Цена поломки", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.CostOfRepair, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.CostOfRepair, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.DateOfRepair , "Дата поломки", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.DateOfRepair, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.DateOfRepair, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.TransportationId, "Компания доставки", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(m => m.TransportationId, ViewBag.Companies as IEnumerable<SelectListItem>)
				@Html.ValidationMessageFor(model => model.TransportationId, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Добавить" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("К списку", "ListRepairs")
</div>

