@model FinalTaskShop.ViewModels.ForGood.TransportationViewModel

@{
	ViewBag.Title = "CreateTransportation";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<h4>Товар</h4>
	<hr />
	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			@Html.LabelFor(model => model.TitleTransport, "Название компании", htmlAttributes: new { @class = "control-label col-md-2" })
