@model FinalTaskShop.ViewModels.ForRentalSpaces.RentalSpaceViewModel

@{
	ViewBag.Title = "DeleteRentalSpace";
}

<h3>Вы точно хотите удалить это помещение?</h3>
<div>
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayName("Название")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Title)
		</dd>

		<dt>
			@Html.DisplayName("Стоимость аренды")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Rental)
		</dd>

		<dt>
			@Html.DisplayName("Время аренды")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Month)
		</dd>
	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="Удалить" class="btn btn-default" /> |
			@Html.ActionLink("Назад", "ListRentalSpaces")
		</div>
	}
</div>