@model FinalTaskShop.ViewModels.ForEmployee.PaymentAccountViewModel

@{
	ViewBag.Title = "CalculateSalary";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<h4>Зарплата</h4>
	<hr />
	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.Payday, "День зарплаты", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Payday, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Payday, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Расчитать" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Назад", "Index")
</div>

